{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                //main.cpp compilation
                "${workspaceFolder}/*.cpp",

                //Application compliation
                "${workspaceFolder}/includes/*.cpp",
                "${workspaceFolder}/includes/*.h",

                //UserInterface Compilation
                "${workspaceFolder}/includes/userInterface/*.cpp",
                "${workspaceFolder}/includes/userInterface/*.h",

                //AreaOfCircle Compilation
                "${workspaceFolder}/includes/exercises/*.cpp",
                "${workspaceFolder}/includes/exercises/*.h",

                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
